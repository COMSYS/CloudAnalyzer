<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:layout_marginTop="22dp" />

    <de.rwth.comsys.cloudanalyzer.gui.util.StatsBarChart
        android:id="@+id/statsBarChartUp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivLogo"
        android:gravity="start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/ivLogo"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/up"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvLabelUpMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:layout_marginStart="45dp"
        android:layout_marginTop="37dp"
        android:layout_toEndOf="@+id/ivLogo"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/zero"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="start"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/ivLogo"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvLabelUpMax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="37dp"
        android:layout_toEndOf="@+id/ivLogo"
        android:gravity="end"
        android:maxLines="1"
        android:text="@string/zero"
        android:textSize="15sp" />

    <de.rwth.comsys.cloudanalyzer.gui.util.StatsBarChart
        android:id="@+id/statsBarChartDown"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/ivLogo"
        android:gravity="start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        android:layout_marginTop="54dp"
        android:layout_toEndOf="@+id/ivLogo"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/down"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvLabelDownMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:layout_marginStart="45dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/ivLogo"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/zero"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvLabelDownMax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/ivLogo"
        android:gravity="end"
        android:maxLines="1"
        android:text="@string/zero"
        android:textSize="15sp" />
</RelativeLayout>